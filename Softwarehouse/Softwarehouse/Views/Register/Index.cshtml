@model Softwarehouse.ViewModels.RegisterViewModel
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registration Form</title>
    <link rel="stylesheet" href="~/Content/assets/demo.css">
    <link rel="stylesheet" href="~/Content/assets/form-register.css">
    <script>
        var RegisterApp = angular.model('RegisterApp', []);
        RegisterApp.controller('RegisterController', function ($scope, $window) {

        });
        $(document).ready(function () {
            $('#Account').change(function () {
                debugger;
            });
        });
    </script>
</head>

<div class="main-content" ng-app="RegisterApp">
    <!-- You only need this form and the form-register.css -->
    <form class="form-register" name="FormRegister" method="post" action="@Url.Action("Register")">
        <div class="form-register-with-email">
            <div class="form-white-background">
                <div class="form-title-row">
                    <h1>免費註冊</h1>
                </div>
                <div class="form-row">
                    <label>
                        <span>@Html.LabelFor(m=>m.Account)</span>
                        <input type="text" id="Account" name="Account" ng-model="Account" required>
                    </label>
                </div>
                <div class="form-row">
                    <label>
                        <span>@Html.LabelFor(m => m.Name)</span>
                        <input type="text" name="Name" ng-model="Name" required>
                    </label>
                </div>
                <div class="form-row">
                    <label>
                        <span>@Html.LabelFor(m => m.Email)</span>
                        <input type="email" name="Email" ng-model="Email" required>
                    </label>
                </div>
                <div class="form-row">
                    <label>
                        <span>@Html.LabelFor(m => m.Password)</span>
                        <input type="password" name="Password" ng-model="Password" required>
                    </label>
                </div>
                <div class="form-row">
                    <label>
                        <span>@Html.LabelFor(m => m.ConfirmPassword)</span>
                        <input type="password" name="ConfirmPassword" ng-model="ConfirmPassword" required>
                    </label>
                </div>
                <div class="form-row">
                    <label class="form-checkbox">
                        <input type="checkbox" name="checkbox" checked>
                        <span>I agree to the <a href="#">terms and conditions</a></span>
                    </label>
                </div>
                <div class="form-row">
                    <button type="submit">註冊</button>
                </div>
            </div>
        </div>
    </form>
</div>